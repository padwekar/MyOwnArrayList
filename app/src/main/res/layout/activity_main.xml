<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="healthsignz.com.myownarraylist.MainActivity">
    <TextView
        android:text="Size"
        android:textSize="12px"
        android:gravity="center"
        android:background="@drawable/textview_verysmall_background"
        android:id="@+id/label_size"
        android:layout_width="70dp"
        android:layout_height="30dp" />
    <TextView
        android:gravity="center"
        android:textSize="50px"
        android:layout_below="@+id/label_size"
        android:background="@drawable/textview_small_background"
        android:id="@+id/label_textview_size"
        android:layout_width="70dp"
        android:layout_height="70dp" />
    <TextView
        android:textAlignment="viewEnd"
        android:layout_gravity="end"
        android:textSize="40px"
        android:hint="LINK LIST"
        android:gravity="end"
        android:layout_toRightOf="@id/label_textview_size"
        android:background="@drawable/textview_background"
        android:id="@+id/textview_linklistdata"
        android:layout_width="match_parent"
        android:layout_height="100dp" />
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:orientation="horizontal"
        android:layout_below="@id/textview_linklistdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Element"
            android:gravity="center"
            android:background="@drawable/textview_verysmall_background"
            android:id="@+id/textview_element"
            android:layout_width="70dp"
            android:layout_height="70dp" />
    <EditText
        android:hint="0"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:background="@drawable/textview_small_background"
        android:id="@+id/edittext_element"
        android:layout_width="match_parent"
        android:layout_height="70dp" />
        <TextView
            android:hint="Position"


            android:gravity="center"
            android:background="@drawable/textview_verysmall_background"
            android:id="@+id/textview_position"
            android:layout_width="70dp"
            android:layout_height="70dp" />
    <EditText
        android:id="@+id/edittext_pos"
        android:hint="0"
        android:layout_weight="1"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_below="@id/textview_linklistdata"
        android:layout_width="match_parent"
        android:background="@drawable/textview_small_background"
        android:layout_height="70dp" />

    </LinearLayout>
    <com.facebook.login.widget.LoginButton
        android:layout_below="@id/linearLayout1"
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="WELCOME"
        android:gravity="center"
        android:typeface="monospace"
        android:textStyle="bold"
        android:textColor="#fff"
        android:freezesText="true"
        android:id="@+id/user_name"
        android:background="@drawable/facebook_textview_background"
        android:layout_below="@id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

<RelativeLayout
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textview_btn_addToFirst"
        android:layout_margin="10dp"
        android:text="ADD TO FIRST"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="@drawable/custom_button_selector"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/textview_btn_addToLast"
        android:layout_margin="10dp"
        android:text="ADD TO LAST"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/custom_button_selector"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/textview_btn_addToPos"
        android:layout_margin="10dp"
        android:layout_below="@id/textview_btn_addToFirst"
        android:text="ADD TO POS"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="@drawable/custom_button_selector"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/textview_btn_deleteAtPos"
        android:layout_margin="10dp"
        android:textColor="#ffffff"
        android:layout_below="@id/textview_btn_addToFirst"
        android:text="DELETE AT POS"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/custom_button_selector"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"/>



    <TextView
        android:id="@+id/textview_deleteLast"
        android:layout_margin="10dp"
        android:layout_below="@id/textview_btn_addToPos"
        android:text="DELETE LAST"
        android:textColor="#ffffff"
        android:gravity="center"
        android:background="@drawable/custom_button_selector"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/textview_deleteFirst"
        android:layout_margin="10dp"
        android:layout_below="@id/textview_btn_addToPos"
        android:text="DELETE FIRST"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/custom_button_selector"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:onClick="onClick"/>

</RelativeLayout>

</RelativeLayout>
